  "obs_notes": {
    "setup": [
      "1. Import this scene JSON into OBS Studio",
      "2. Update text_file paths to absolute paths on your system",
      "3. Run: python scripts/stream_league.py --pace 2.0",
      "4. The script writes scoreboard.json, events.json, table.json to streaming/",
      "5. OBS text sources auto-refresh from these files"
    ],
    "custom_overlay": "For a polished look, replace the text sources with browser sources pointing to a local HTML dashboard that reads the JSON files."
